!!!5
%html{class:"no-js", lang:"es"}
	%head
		%title Biblioteca Geek | Cursos de programacion gratis
		
		%meta{charset:"UTF-8"}
		%meta{content:"width=device-width, initial-scale=1, maximum-scale=1", name:"viewport"}
		%meta{name:"keywords", content:""}
		%meta{name:"description", content:""}
		%meta{name:"author", content:"franciscogustavo"}
		%meta{name:"owner", content:"Biblioteca Geek"}
		%meta{name:"robots", content:"index, follow"}
		
		%script{src:"dist/modernizr-2.8.3.min.js"}
		%link{rel:"stylesheet", href:"css/normalize.css"}
		
		%link{href:"https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300i,400,400i,700,700i", rel:"stylesheet"}
		%link{href:"https://fonts.googleapis.com/icon?family=Material+Icons", rel:"stylesheet"}
		%link{rel:"stylesheet", href:"css/styles.css"}
		%script{src:"js/app.js"}
	%body
		="<!--[if lt IE 8]>"
		%p{class:"browserupgrade"}
			Estás usando un navegador
			%strong desactualizado.
			Por favor
			%a{href:"http://browsehappy.com/"}
				actualiza tu navegador
			para una mejor experiencia
		="<![endif]-->"
		//Contenedor central
		.content
			// Flecha izquierda
			.arrow-right
				%i.material-icons chevron_left
			// Toda la informacion
			.main
				// Slider
				.container
					// Bienvenida
					.home
						%h1 Biblioteca Geek
						.info
							%p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
							tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
							quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
							consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
							cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
							proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
						.buttons
							.login
								%button#sign_in Iniciar sesion
								%button#sign_up Registrate
							.facebook
								%a{href:"#"} Iniciar con Facebook
					//Articulos
					.articles
						%h2 Articulos
						.content-items
							-for i in 1..6
								.item 
									.img
										%i.material-icons.more{:data => {key:"inactivo"}} more_vert
										.about
											%a{href:"#"} Compartir
											%a{href:"#"} Información
											%a{href:"#"} Descargar
									%a{href:"https://www.google.com"}
										.content-info
											%h3 Title of item #{i}
											%p Lorem ipsum dolor sit amet, consectetur adipisicing elit
											.info-own
												%P Name of own
												%p 01/02/2017
						.button
							%button Ver más
					//Cursos
					.courses
						%h2 Cursos
						.content-items
							-for i in 1..6
								.item
									.img
										%i.material-icons.more{:data => {key:"inactivo"}} more_vert
										.about
											%a{href:"#"} Compartir
											%a{href:"#"} Información
											%a{href:"#"} Descargar
									%a{href:"#"}
										.content-info
											%h3 Title of item #{i}
											%p Lorem ipsum dolor sit amet, consectetur adipisicing elit,
											.info-own
												%P Name of own
												%p 01/02/2017
						.button
							%button Ver más
			//Flecha Derecha
			.arrow-left
				%i.material-icons chevron_right
		//Formularios
		.log-in.sign_in
			.form-container
				%h4 Iniciar sesión
				%form{name: "signin"}
					.form-input
						%input{type:"email", id:"email-signin"}
						%label{for:"email-signin"} Correo Electronico:
					.form-input
						%input{type:"password", id:"password-signin"}
						%label{for:"password-signin"} Contraseña:
					.form-button
						%button Cancelar
						%input{type:"submit", value:"Listo"}
		.log-in.sign_up
			.form-container
				%h4 Crea tu cuenta
				%form{name: "signup"}
					.form-input
						%input{type:"text", id:"name-signup", name:"nameSignup"}
						%label{for:"name-signup"} Nombre:
					.form-input
						%input{type:"email", id:"email-signup"}
						%label{for:"email-signup"} Correo Electronico:
					.form-input
						%input{type:"password", id:"password-signup"}
						%label{for:"password-signup"} Contraseña:
					.form-input
						%input{type:"password", id:"confirmpassword-signup"}
						%label{for:"confirmpassword-signup"} Confirmar contraseña:
					.form-button
						%button Cancelar
						%input{type:"submit", value:"Listo"}